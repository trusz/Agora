<%- include('layout',
	{
	body:
	`
	<div
	class="auth-form">
	<h1>Register</h1>

	<form action="/register"
		  method="post">
		<div class="form-group">
			<label for="username">Username:</label>
			<input type="text"
				   id="username"
				   name="username"
				   required>
		</div>

		<div class="form-group">
			<label for="password">Password:</label>
			<input type="password"
				   id="password"
				   name="password"
				   required>
		</div>

		<div class="form-actions">
			<button type="submit"
					class="btn">Register</button>
		</div>
	</form>

	<p>
		Already have an account? <a href="/login">Login</a>
	</p>
	</div>
	`) %>