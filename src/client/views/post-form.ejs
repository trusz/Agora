<%- include('layout',
	{
	body:
	`
	<div
	class="post-form">
	<h1>Submit new <%= locals.postType==='question'
			? 'Question'
			: 'URL'
			%>
	</h1>

	<form action="/post"
		  method="post">
		<input type="hidden"
			   name="type"
			   value="<%= locals.postType === 'question' ? 'question' : 'url' %>">

		<div class="form-group">
			<label for="title">Title:</label>
			<input type="text"
				   id="title"
				   name="title"
				   required>
		</div>

		<% if
		   (locals.postType
		   !=='question'
		   )
		   {
		   %>
			<div class="form-group">
				<label for="url">URL:</label>
				<input type="url"
					   id="url"
					   name="url"
					   required>
			</div>
			<% }
			   %>

				<div class="form-group">
					<label for="description">
						<%= locals.postType==='question'
							? 'Question details:'
							: 'Description (optional):'
							%>
					</label>
					<textarea id="description"
							  name="description"
							  <%=locals.postType==='question'
							  ? 'required'
							  : ''
							  %>></textarea>
				</div>

				<div class="form-actions">
					<button type="submit"
							class="btn">Submit</button>
				</div>
	</form>
	</div>
	`) %>