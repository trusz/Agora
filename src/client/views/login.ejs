<%- include('layout',
	{
	body:
	`
	<div
	class="auth-form">
	<h1>Login</h1>

	<form action="/login"
		  method="post">
		<div class="form-group">
			<label for="username">Username:</label>
			<input type="text"
				   id="username"
				   name="username"
				   required>
		</div>

		<div class="form-group">
			<label for="password">Password:</label>
			<input type="password"
				   id="password"
				   name="password"
				   required>
		</div>

		<div class="form-actions">
			<button type="submit"
					class="btn">Login</button>
		</div>
	</form>

	<p>
		Don't have an account? <a href="/register">Register</a>
	</p>
	</div>
	`) %>